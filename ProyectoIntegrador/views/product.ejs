<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   

    <title>Gardenia Libros</title>
    <!-- Font Awesome Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <!-- Bootstrap Grid Stylesheet -->
        <link rel='stylesheet' href='/stylesheets/app.css' />
        <link rel='stylesheet' href='/stylesheets/bootstrap-grid.min.css'>
</head>

<body>
    <!-- Header -->
    <%- include('./partials/header')%>
    <!-- /Header -->

    <!-- detalle del producto -->
    <div class="container products-wrapper">

        <div class="informacion">
            <div><h2 class="products-title tipografia2" > <%= libro.nombre %> </h2></div>
            <div><h3 class="products-autor tipografia3"> Autor: <%= libro.autor %></h3></div>
        </div>
        
        <div class="product-detail">
            <div class="row">

                <article class="col-12 col-lg-8 product-detail-info">
                    <img src= <%= libro.foto %> alt="" class="product-detail-img">
                    <h3 class="genero tipografia3">GÃ©nero: <%= libro.genero%></h3>
                    <p class="product-detail-description tipografia3" id="resumenes"> <%= libro.resumen %> </p>
                </article>

                <div class="col-12 col-lg-4">
                    <section class="comments">
                        <% libro.comentarios.forEach(element=> { %>
                        <article>
                            <img src= <%= element.fotoUsuario %> alt="">
                            <div class="data">
                                <p class="user">
                                    <strong> <a href="http://localhost:3000/profile" class="tipografia3"> <%= element.usuario %>:  </a> </strong>
                                    <p class="tipografia3"><%= element.comentario%></p>
                                </p>
                            </div>
                        </article>
                        <% }) %>
                    </section>

                    <form class="form" action="" method="POST">
                        <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                        <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                    </form>

                    <hr>
                </div>
            </div>
        </div>
    </div>
    <!-- detalle del producto -->

    <!-- footer -->
    <%- include('./partials/footer')%>
    <!-- /footer -->

</body>

</html>