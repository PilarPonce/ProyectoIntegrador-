<!-- Header -->

<header class="main-header">
    <% if(! logueado) { %>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" >
                    <img class="logofoto" src="/images/marca/logo.jpg.png">
                </a>
            </div>

            <div class="col-7 col-md-6" id="buscador">
                <form action="/searchresults" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Busca libros, autores y generos"
                        class="search-form_input">
                <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button> 
                </form> 
            </div>

            <ul class="listaHeader">
                <li>
                    <a href="/register" class="tipografia1 creaIngresa">Creá tu cuenta <i class="far fa-address-card"></i>
                    </a>
                </li>
                <li class="ingresa">
                    <a href="/login" class="tipografia1 creaIngresa">Ingresá <i class="fas fa-sign-in-alt"></i></a>
                </li>
            </ul>
            
        </div>
        <li class="col-7 col-md-6 listaHeader">
            <a href="/todos" class="tipografia1 creaIngresa">Todos los productos</a>
        </li>
    </div>
    <% } else { %>
    <div class="container">
        <div class="entero">
            <div class="lafotodellogo">
                <a href="/" class="main-header_home-link">
                    <img class="logofoto" src="/images/marca/logo.jpg.png">
                </a>
            </div>
    
            <div class="col-7 col-md-6" id="buscador2">
                <form action="/searchresults" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Busca libros, autores y generos"
                        class="search-form_input">
                <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button> 
                </form> 
            </div>
<!--nombre de usuario logueado-->
            <ul class="right-navbar">
                <li>
                    <a class="tipografia1 creaIngresa" href="/profile/ <%=  idUsuario %>"> <%=  nombreUsuario %> <i class="fas fa-user"></i>
                    </a>
                </li>

<!--cerrar sesion-->
                <li class="cerrarSesion tipografia1">
                    <form action="/logout">
                        <input class="cerrarsesion" type="submit" value="Cerrar Sesión">
                    </form>
                </li>
            </ul>
        </div>
        <div class="libroyproductos">
            <a class="tipografia1 creaIngresa" href="/productadd">
                Agregar libro
                <ion-icon name="add-circle-outline" class="mas">Agregar libro</ion-icon>
            </a>
            <div class="col-7 col-md-6 listaHeader">
                <a href="/todos" class="tipografia1 creaIngresa">Todos los productos</a>
            </div>
        </div>
    </div>
<% } %>
</header>