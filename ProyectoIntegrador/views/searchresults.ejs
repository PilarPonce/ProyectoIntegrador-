<!DOCTYPE html>
<html lang="es">
<!-- Head -->
<%- include('./partials/head')%>
<!-- Head -->
<body>
<!-- Header -->
<%- include('./partials/header')%>
<!-- /Header -->

    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="tipografia2">Resultados de b√∫squeda</h2>
            </div>

    <% if (libro == undefined && libro2 == undefined || libro == 0 && libro2 == 0) { %>
        <h2 class="tipografia2" >No se encontraron resultados</h2>
    <% } %>        

    <% libro.forEach(element => { %>
    <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
            <a href="/product/<%= element.id %>">
                <figure class="product-box_image">
                  <img src="<%= element.foto %>" alt="">
                </figure>
                <article class="product-box_data">
                    <h2 class="tipografia1"><%= element.nombre %></h2>
                    <p class="tipografia1"> <%= element.autor %></p>
                    <p class="tipografia1"> <%= element.genero %></p>
                    <style type="text/css">
                        a:link,
                        a:visited,
                        a:active {
                            text-decoration: none;
                        }
                    </style>
                </article>
            </a>
        </section>
    </div>
    <% }) %>

    <% libro2.forEach(element=> { %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/product/<%= element.id %>">
                    <figure class="product-box_image">
                        <img src="<%= element.foto %>" alt="">
                    </figure>
                    <article class="product-box_data">
                        <h2 class="tipografia1">
                            <%= element.nombre %></h2>
                        <p class="tipografia1">
                            <%= element.autor %></p>
                        <p class="tipografia1">
                            <%= element.genero %></p>
                        <style type="text/css">
                            a:link,
                            a:visited,
                            a:active {
                                text-decoration: none;
                            }
                        </style>
                    </article>
                </a>
            </section>
        </div>
        <% }) %>
    
<!-- footer -->
<%- include('./partials/footer')%>
<!-- /footer -->
</body>

</html>