<!DOCTYPE html>
<html lang="es">
    <!-- Head -->
    <%- include('./partials/head')%>
    <!-- Head -->
<body>
    <!-- Header -->
    <%- include('./partials/header')%>
    <!-- /Header -->

    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="iniciarsesion">Ingresar</h2>
            </div>
        
            <!-- FORMULARIO LOG IN -->
            <section class= "formularioLogin">
                <form class="formLogin" action="/login" method="POST" id="form">     
                    <div class="formsLogin">
                        
                        <div class="completa">
                            <label class="palabra" for="name">Nombre</label>
                            <input class="inputs" type="nombre" name="nombre" id="nombre">
                            <hr>
                            </hr>
                        </div>
        
        
                        <div class="completa">
                            <label class="palabra" for="contraseña">Contraseña</label>
                            <input class="inputs" type="password" name="contraseña" id="contraseña">
                            <hr>
                            </hr>
                        </div>
                        
                        <!-- RECORDARME -->
                        <div class="recordarme">
                            Recordarme <input type="checkbox" name="recordarme" id=""><br>
                        </div>

                        <!-- ERRORES VALIDACION -->
                        <div class="error">
                            <% if(locals.erroresLogin){ %>
                                <h2 class="mensajeError">Error: <%= erroresLogin.message %>
                                </h2>
                                <% } %>
                        </div>
                            <button class="boton1" type="submit">Iniciar sesión</button>
                            <a href="/register" class="preguntaLogin"> ¿Todavia no tenes una cuenta? Registrate</a>
                    </div>
        
                </form>
            </section>
            
            


<!-- footer -->
<%- include('./partials/footer')%>
<!-- footer -->
</body>

</html>