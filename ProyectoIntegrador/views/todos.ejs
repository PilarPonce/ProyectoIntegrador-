<!DOCTYPE html>
<html lang="es">
    <!-- Head -->
    <%- include('./partials/head')%>
    <!-- Head -->
   
<body>
  <%- include('./partials/header')%> 

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title tipografia2">Todos los productos</h2>
        </div>
        <% libros.forEach(element => { %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
            <a href="/product/<%= element.id %>">
                    <figure class="product-box_image">
                        <img src= '/images/productos/<%= element.foto %>' alt="portada libro">
                    </figure>
                    <article class="product-box_data">
                        <h2 class="tipografia1"> <%= element.nombre %> </h2>
                        <p class="tipografia1"> <%= element.autor %> </p>
                        <p class="tipografia1"><%= element.genero %></p>
                    </article>
                </a>
            </section>
        </div>
        <% }) %>
    </div>          
</div>

<!-- Footer -->
<%- include('./partials/footer')%>
<!-- Footer -->
</body>

</html>