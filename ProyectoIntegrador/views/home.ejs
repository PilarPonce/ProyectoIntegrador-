                        </figure>
                        <article class="product-box_data">
                            <h2 class="tipografia1"> <%= element.nombre %> </h2>
                            <p class="tipografia1"> <%= element.autor %> </p>
                            <p class="tipografia1"><%= element.genero %></p>
                        </article>
                    </a>
                </section>
            </div>
            <% }) %>
        </div>          
    </div>
    <!-- CLASICOS  -->


    <!--ROMANTICOS-->
