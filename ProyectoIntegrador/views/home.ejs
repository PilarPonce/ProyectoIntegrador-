<!DOCTYPE html>
<html lang="es">
    <!-- Head -->
    <%- include('./partials/head')%>
    <!-- Head -->
   
<body>
<!--     <%- include('./partials/header')%>  -->
<header class="main-header">
    <% if(! logueado) { %>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-5 col-md-2">
                    <a href="/">
                        <img class="logofoto1" src="/images/marca/logo.jpg.png">
                    </a>
                </div>

                <div class="col-7 col-md-6" id="buscador">


                    <form action="/searchresults" method="GET" class="search-form">
                        <input type="text" name="search" placeholder="Busca libros, autores y más..."
                            class="search-form_input">
                        <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                    </form>
                </div>


                <ul class="listaHeader">
                    <li>
                        <a href="/register" class="tipografia1 creaIngresa">Creá tu cuenta <i
                                class="far fa-address-card"></i>
                        </a>
                    </li>
                    <li class="ingresa">
                        <a href="/login" class="tipografia1 creaIngresa">Ingresá <i class="fas fa-sign-in-alt"></i></a>
                    </li>

                </ul>

            </div>
            <li class="col-7 col-md-6 listaHeader">
                <a href="/" class="tipografia1 creaIngresa">Todos los productos</a>
            </li>
        </div>
        <% } else { %>
            <div class="container">
                <div class="entero">
                    <div class="lafotodellogo">
                        <a href="/" class="main-header_home-link">
                            <img class="logofoto" src="./images/marca/logo.jpg.png">
                        </a>
                    </div>

                    <div class="col-71 col-md-6">
                        <form action="" method="GET" class="search-logueado">
                            <input type="text" name="search" placeholder="Busca libros, autores y más..."
                                class="search-logueado_input">
                            <button type="submit" class="search-logueado_button"><i class="fas fa-search"></i></button>
                        </form>
                    </div>

                    <ul class="right-navbar">
                        <li>
                            <a class="tipografia1 creaIngresa" href="/profile">
                                Kim Kardashian <i class="fas fa-user"></i>
                            </a>
                        </li>
                        <li>
                            <a class="logout" href="/">
                                Cerrar sesión <i class="fas fa-sign-in-alt"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="libroyproductos">
                    <a class="tipografia1 creaIngresa" href="/productadd">
                        Agregar libro
                        <ion-icon name="add-circle-outline" class="mas">Agregar libro</ion-icon>
                    </a>
                    <div class="col-7 col-md-6 listaHeader">
                        <a href="/" class="tipografia1 creaIngresa">Todos los productos</a>
                    </div>
                </div>
            </div>
            <% } %>
</header>
<!-- Banner -->
<div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider="center: true">

    <ul class="uk-slider-items uk-grid">
        <li class="uk-width-3-4">
            <div class="uk-panel">
                <img src="images/marca/banner.png" alt="">
                <div class="uk-position-center uk-panel">
                </div>
            </div>
        </li>
        <li class="uk-width-3-4">
            <div class="uk-panel">
                <img src="images/marca/banner2.png" alt="">
                <div class="uk-position-center uk-panel">
                </div>
            </div>
        </li>
        <li class="uk-width-3-4">
            <div class="uk-panel">
                <img src="images/marca/banner3.png" alt="">
                <div class="uk-position-center uk-panel">
                </div>
            </div>
        </li>
    </ul>

    <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous
        uk-slider-item="previous"></a>
    <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next
        uk-slider-item="next"></a>

</div>

    <!-- /Banner -->

    <!-- BEST SELLERS -->
    
    <div class="container products-wrapper">
        
        <div class="row">
            <div class="col-12">
                <h2 class="products-title tipografia2">Best Sellers 2020</h2>
            </div>
            <!-- best sellers -->
            <% libros.bestsellers.forEach(element => { %>
            <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/product/<%= element.id %>">
                        <figure class="product-box_image">
                            <img src= <%= element.foto %>  alt="portada libro">
                        </figure>
                        <article class="product-box_data">
                            <h2 class="tipografia1"><%= element.nombre %></h2>
                            <p class="tipografia1"> <%= element.autor %> </p>
                            <p class="tipografia1"><%= element.genero %></p>
                            <style type="text/css">
                                a:link,
                                a:visited,
                                a:active {
                                    text-decoration: none;
                                }
                            </style>
                        </article>
                    </a>
                </section>
            </div>
            <% }) %>
        
    </div>
    <!-- / BEST SELLERS  -->


    <!-- CLASICOS  -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title tipografia2">Clásicos de siempre</h2>
            </div>
            <% libros.clasicos.forEach(element => { %>
